<form method="post" action="{{ path('admin_order_delete', {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
    <button class="btn badge-light" ><i class="ti-trash"></i></button>
</form>
