{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <div class="main-content-inner">
        <div class="row">

            <div class="col-lg-12 mt-7">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Own Templates</h4>
                        <div class="single-table">
                            <div class="table-responsive">
                                <table class="table text-center">
                                    <thead class="text-uppercase bg-success">
                                    <tr class="text-white">
                                        <th scope="col">Id</th>
                                        <th scope="col">Product</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Link</th>
                                        <th scope="col">-</th>
                                        <th scope="col">-</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for template in templates %}
                                    <tr>
                                        <th scope="row">{{template.id}}</th>
                                        <td>{{template.product.name}} </td>
                                        <td>{{template.createdAt|date("m/d/Y")}}</td>
                                        <th scope="col"><a href="{{ url('app_product',{'id':template.id}) }}">{{ url('app_product',{'id':template.id}) }}</a></th>
                                        <td><a class="btn badge-light" href="{{ path('admin_template_edit', { 'id': template.id }) }}"><i class="fa fa-external-link"></i></a></td>
                                        <td>{{  include('template/_delete_form.html.twig' , { 'id': template.id }) }}</td>
                                    </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- table success end -->
            <!-- table info start -->

        </div>
    </div>
{% endblock %}
