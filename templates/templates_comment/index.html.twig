{% extends 'base.html.twig' %}

{% block title %}TemplatesComment index{% endblock %}

{% block body %}
    <h1>TemplatesComment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for templates_comment in templates_comments %}
            <tr>
                <td>{{ templates_comment.id }}</td>
                <td>{{ templates_comment.author }}</td>
                <td>{{ templates_comment.img }}</td>
                <td>
                    <a href="{{ path('templates_comment_show', {'id': templates_comment.id}) }}">show</a>
                    <a href="{{ path('templates_comment_edit', {'id': templates_comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('templates_comment_new') }}">Create new</a>
{% endblock %}
